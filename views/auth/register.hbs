
  <div class="mx-auto" style="width: 300px;">
  <form action="/register" method="POST">
    <div class="form-group">
      <label for="exampleDropdownFormEmail1">Username</label>
      <input type="string" name="username" class="form-control" placeholder= "Username" >
    </div>
    <div class="form-group">
      <label for="exampleDropdownFormEmail1">Email address</label>
      <input type="email" name="email" class="form-control" id="exampleDropdownFormEmail1" placeholder="email@example.com">
    </div>
    <div class="form-group">
      <label for="exampleDropdownFormPassword1">Password</label>
      <input type="password" name="password" class="form-control" id="exampleDropdownFormPassword1" placeholder="Password">

      {{#if errorMessage }}
      <div class="error-message">{{ errorMessage }}</div>
      {{/if}}
    </div>
    <button type="submit" class="btn btn-primary">Register</button>

  </form>
  

  <p class="account-message">
    Already have an account? <a href="/login"><button type="submit" class="btn btn-primary">Login</button></a>
  </p>

</div>



{{#if platos}}
{{#each platos as |plato|}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{plato.image}}" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{plato.title}}</h5>
        <p class="card-text">{{plato.price}}€</p>
        {{!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> --}}
        <form action="/{{plato.id}}/cesta/delete" method="POST">
          <button type="submit" class="btn btn-danger btn-sm text-white mr-3">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{totalPrice}} €
<form action="/pagar" method="GET">
    <button type="submit" class="btn btn-danger btn-sm text-white mr-3">Ir A Pagar</button>
</form>
{{else}}
<h2>You haven't ordered anything yet, check the food!</h2>
  <form action="/home">
      <button type="submit" class="btn btn-danger btn-sm text-white mr-3">Check The Food!</button>
  </form>
{{/if}}


